<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/reportCardDescriptionItemValue"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="404 kcal"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/reportCardDescription"
        app:layout_constraintEnd_toStartOf="@+id/reportCardDescriptionItemDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reportCardDescriptionItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="DD/MM/YYYY"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/reportCardDescriptionItemValue"
        app:layout_constraintEnd_toStartOf="@+id/reportCardDescriptionItemDelete"
        app:layout_constraintTop_toTopOf="@+id/reportCardDescriptionItemValue" />

    <TextView
        android:id="@+id/reportCardDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Circuit Training with Aerobic Movement"
        android:textColor="@color/bluePriComplement"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reportCardDescriptionItemDelete"
        app:layout_constraintStart_toStartOf="@+id/reportCardDescriptionItemValue" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/reportCardDescriptionItemDelete"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/crimsonError"
        app:srcCompat="@drawable/ic_trash" />

    <View
        android:id="@+id/divider"
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:background="#99A3A4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>