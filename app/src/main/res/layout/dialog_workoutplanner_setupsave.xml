<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/saveTitle"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:text="Save Workout"
        android:textColor="@color/bluePriComplement"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workoutDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Give your routine a name:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/saveTitle"
        app:layout_constraintTop_toBottomOf="@+id/saveTitle" />

    <EditText
        android:id="@+id/workoutNameInput"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:hint="Workout Name"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/workoutDescription"
        app:layout_constraintTop_toBottomOf="@+id/workoutDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>